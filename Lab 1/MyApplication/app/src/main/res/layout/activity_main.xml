<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/university_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ju_logo"
            android:contentDescription="Jahangirnagar University Logo"
            android:scaleType="centerCrop"
            android:background="@drawable/image_background"/>

        <TextView
            android:id="@+id/university_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jahangirnagar University"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/student_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/university_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/image_background"
        android:contentDescription="Student Photo"
        android:scaleType="centerCrop"
        android:src="@drawable/rubayed_image" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Rubayed All Isalm"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/roll_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Student Roll Number: 370"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/roll_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Batch: 49"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/batch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Department: Computer Science &amp; Engineering"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/blood_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/department"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Blood Group: O (+ve)"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/validity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blood_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Validity: 27 June 2026"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/signature"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@id/validity_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/rubayed_signature"
        android:contentDescription="Signature"
        android:scaleType="fitCenter"
        android:background="@drawable/image_background"/>

    <TextView
        android:id="@+id/signature_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Signature"
        android:textColor="@android:color/black"
        android:textSize="14sp" />


</RelativeLayout>
